{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "perf": "warn",
    "style": "off",
    "restriction": "off",
    "nursery": "off"
  },
  "ignorePatterns": [
    "node_modules",
    "**/dist",
    "**/build",
    "*.min.js",
    "coverage",
    "**/*.d.ts",
    "**/babel.config.js",
    "**/.babelrc.js",
    "**/webpack.config.js",
    "**/vite.config.ts",
    "**/*.cjs"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "error",
    "no-empty": "warn",
    "no-prototype-builtins": "warn"
  }
}
